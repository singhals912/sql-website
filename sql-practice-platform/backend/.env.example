# Environment Configuration Template
# Copy this file to .env and replace all placeholder values with secure production values

PORT=5001
NODE_ENV=development

# Database Configuration
# CRITICAL: Change default passwords before production deployment
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sql_practice
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION

# JWT Configuration  
# CRITICAL: Generate a strong, random JWT secret for production
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERATE_STRONG_JWT_SECRET_HERE_64_CHARACTERS_MINIMUM

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# SQL Executor Database (for sandboxed query execution)
EXECUTOR_DB_HOST=localhost
EXECUTOR_DB_PORT=5433
EXECUTOR_DB_NAME=sql_practice_executor
EXECUTOR_DB_USER=sql_executor_limited
EXECUTOR_DB_PASSWORD=CHANGE_THIS_EXECUTOR_PASSWORD

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
SESSION_SECRET=GENERATE_ANOTHER_STRONG_SECRET_HERE
BCRYPT_ROUNDS=12

# Production Security Headers
HELMET_CSP_ENABLED=true
CORS_ORIGINS=http://localhost:3000